<header>
	<div class="authentication">
		{% if user %}
			<a href="/user/logout">Logout</a>
		{% else %}
			<a href="/user/login">Login</a>
			<a href="/user/register">Register</a>
		{% endif %}
	</div>
	<span class="site-title">
		<a href="/">{{ site.title }}</a>
	</span>
	{% if user %}
		{% if newPost %}
			<a href="/post/new" class="newButton hide">New Post</a>
			<span class="editButton hide">Edit</span>
			<span class="saveButton">Save</span>
			<span class="cancelButton">Cancel</span>
		{% else %}
			<a href="/post/new" class="newButton">New Post</a>
			<span class="editButton">Edit</span>
			<span class="saveButton hide">Save</span>
			<span class="cancelButton hide">Cancel</span>
		{% endif %}
	{% endif %}
</header>
