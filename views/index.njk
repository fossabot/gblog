{% extends '_skeletons/default.njk' %}

{% block content %}
	<section>
		<h1>Posts</h1>
		{% for post in posts %}
			<p>
				<strong>
					<a href="/post/{{ post.slug }}">{{ post.title }}</a>
				</strong>
				<br />
				<em>By: </em><span>{{ post.author }}</span>
				<br />
				<em>On: </em><span>{{ post.date | date }}</span>
			</p>
		{% endfor %}
	</section>
{% endblock %}
